{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "time-logger",
  "title": "Google calendar time logger",
  "description": "Google calendar time logger",
  "icon": "command-icon.png",
  "author": "aramikuto",
  "license": "MIT",
  "preferences": [
    {
      "name": "locale",
      "type": "dropdown",
      "title": "Locale",
      "description": "Select your locale",
      "required": false,
      "default": "en",
      "data": [
        {
          "value": "en",
          "title": "English"
        },
        {
          "value": "ja",
          "title": "Japanese"
        }
      ]
    },
    {
      "name": "templateEventUrl",
      "title": "Template event (optional)",
      "description": "Hereâ€™s how to create a Google Calendar event template:\n\n1. Open Google Calendar on the web and start creating a new event.\n2. Fill in some details such as Availability, Label etc and save the event.\n3. Click on it and then select the three dots from the right corner. Select Publish event.\n4. Copy the link and paste it here.",
      "type": "textfield",
      "placeholder": "https://calendar.google.com/calendar/event?action=TEMPLATE&tmeid=IIIIII&tmsrc=email@gmail.com",
      "required": false
    },
    {
      "name": "epicSortMethod",
      "type": "dropdown",
      "data": [
        {
          "value": "addedTime",
          "title": "Added time"
        },
        {
          "value": "lastUsedTime",
          "title": "Last used time"
        },
        {
          "value": "nameAsc",
          "title": "Name (ascending)"
        },
        {
          "value": "nameDesc",
          "title": "Name (descending)"
        }
      ],
      "default": "addedTime",
      "title": "Sort method",
      "description": "Select the sort method for the epics list",
      "required": false
    },
    {
      "name": "bringActiveEpicToTop",
      "label": "Active epic sorting",
      "type": "checkbox",
      "default": true,
      "title": "Bring active epic to the top",
      "description": "If enabled, the active epic will be displayed at the top of the list",
      "required": false
    }
  ],
  "commands": [
    {
      "name": "gcalTimeLogger",
      "title": "Gcal Time Logger",
      "description": "Google calendar time logger",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.60.1",
    "i18next": "^23.6.0",
    "react-i18next": "^13.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "18.18.4",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
